from simple.util.Math

block fastPowering(base, power)
  if power == 0 {
    return 1
  }

  if power % 2 == 0 {
    multiplier = fastPowering(base, power / 2)
    return multiplier * multiplier
  }

  multiplier = fastPowering(base, floor(power / 2))

  return multiplier * multiplier * base

end
