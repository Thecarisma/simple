block IsPowerOfTwo(number)
  if number < 1 {
      return false # displays 0
  }

  dividedNumber = number
  while dividedNumber != 1
    if dividedNumber % 2 != 0 {
        return false
    }
    dividedNumber /= 2
  end
  return true # displays 1
end

