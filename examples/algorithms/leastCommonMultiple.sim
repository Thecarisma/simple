from 'simple/util/Math.sim'
from 'euclideanAlgorithm.sim'

block LeastCommonMultiple(a, b)
  if a == 0 || b == 0 {
	return 0
  }
  return Abs(a * b) / EuclideanAlgorithm(a, b)
end
