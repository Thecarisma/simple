                setBox(FBoxType.FLAT_BOX) 
                setBackground(new FColor(62,78,184)) 
                __Name = "WindowActionBar"
                this.ActionBarLabel = new FLabel(10,20,this.Title) {
                    setLabelSize(18)
                    setLabelColor(FColor.FCOLOR_WHITE)
                    setLabelFont(1)
                } 
                add(this.ActionBarLabel)
