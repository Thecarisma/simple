    block show(params...)
        paramsLen = lengthOf(params)
        
        if paramsLen == 0 {
            __Fl_Window_show(Ptr) 
        else
            __Fl_Window_show(Ptr) 
            return 
            #todo
            argv = ""
            for arg in params {
                argv + arg + " "
            }
            __Fl_Window_show_1(Ptr,paramsLen-1,argv) 
        }
        waitForExpose()
        Visible = true

